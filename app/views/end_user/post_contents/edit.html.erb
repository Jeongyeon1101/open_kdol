<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 pr-5 border-right">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-6">
      <div class="row mt-5">
        <h2>投稿編集</h2>
      </div>
    <%= form_with model: @post_content do |f| %>
      <div class="row mt-5">
        <ul class="list-unstyled">
          <li>
            <label for="post_text"></label>
            <%= f.text_field :text, id: "post_text" %>
          </li>
          <li>
            <label for="post_image"></label>
            <%= f.file_field :image, id:"post_image", accept: "image/*" %>
          </li>
        </ul>
      </div>
      <div class="row mt-3">
        <%= f.submit "変更する", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>