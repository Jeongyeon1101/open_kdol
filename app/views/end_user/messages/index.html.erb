<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-6">
      <div class="row mt-5">
        <h2>メッセージ一覧</h2>
      </div>
      <div class="row mt-5">
      <% @messages.each do |message| %>
        <ul class="list-unstyled">
          <li>
            <%= message.idol %>
            <%= message.message %>
            <%= link_to "編集", edit_message_path(message.id), class: "btn btn-success" %>
            <%= link_to "削除", message_path(message.id), method: :delete, "data-confirm" => "メッセージを削除します。よろしいですか？", class: "btn btn-danger" %>
          </li>
        </ul>
      <% end %>
      </div>
      <div class="row mt-5">
        <h2>メッセージ作成</h2>
      </div>
      <div class="row mt-5">
        <%= form_with model: @message, url: messages_path do |f| %>
        <ul class="list-unstyled">
          <li>
            <label for="message_idol">推し</label>
            <%= f.text_field :idol, id: "message_idol" %>
          </li>
          <li>
            <label for="message_text">メッセージ</label>
            <%= f.text_field :message, id: "message_text" %>
          </li>
          <li>
            <%= f.submit "登録", class: "btn btn-primary" %>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

