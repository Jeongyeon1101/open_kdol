<h2>メッセージ一覧</h2>

<% @messages.each do |message| %><br>
  <%= message.idol %>
  <%= message.message %>
  <%= link_to "編集", edit_message_path(message.id) %>
  <%= link_to "削除", message_path(message.id), method: :delete, "data-confirm" => "メッセージを削除します。よろしいですか？" %>
<% end %>

<h2>メッセージ作成</h2>

<%= form_with model: @message, url: messages_path do |f| %>
  <label for="message_idol">推し</label>
  <%= f.text_field :idol, id: "message_idol" %><br>
  <label for="message_text">メッセージ</label>
  <%= f.text_field :message, id: "message_text" %><br>
  <%= f.submit "登録" %><br>
<% end %>
