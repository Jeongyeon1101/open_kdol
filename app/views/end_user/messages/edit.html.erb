<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-6">
      <div class="row mt-5">
        <h2>メッセージ編集</h2>
      </div>
    <%= form_with model: @message, url: message_path(@message) do |f| %>
      <div class="row mt-5">
        <ul class="list-unstyled">
          <li>
            <label for="message_idol">推し</label>
            <%= f.text_field :idol, id: "message_idol" %>
          </li>
          <li>
            <label for="message_text">メッセージ</label>
            <%= f.text_field :message, id: "message_text" %>
          </li>
        </ul>
      </div>
      <div class="row mt-3">
        <%= f.submit "保存", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>