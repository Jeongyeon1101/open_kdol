<div class="container">
  <div class="row mt-3">
    <div class="text-danger">
      <%= flash[:alert] %>
    </div>
  </div>
  <div class="row mt-5">
    <h2>ユーザ登録</h2>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "end_user/shared/error_messages", resource: resource %>
        <ul class="list-unstyled">
          <li class="field">
            <%= f.label :name, "ユーザ名" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </li>

          <li class="field">
            <%= f.label :introduction, "自己紹介" %><br />
            <%= f.text_field :introduction, autocomplete: "introduction" %>
          </li>

          <li class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autocomplete: "email" %>
          </li>

          <li class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </li>

          <li class="field">
            <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </li>
        </ul>
      <div class="actions">
        <%= f.submit "ユーザ登録", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
    <div class="col-lg-4"></div>
    <div class="row mt-3">
      <%= render "end_user/shared/links" %>
    </div>
</div>