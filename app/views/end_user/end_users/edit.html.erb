<div class="container">
  <div class="row mt-5">
    <h2>プロフィール編集</h2>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
    <%= form_with model: @end_user, url: end_user_path do |f| %>
      <ul class="list-unstyled">
        <li class="field">
          <label for="profile_image">プロフィール画像</label>
          <%= f.file_field :profile_image, id:"profile_image", accept: "image/*" %>
        </li>
        <li>
          <label for="end_user_name">ユーザ名</label>
          <%= f.text_field :name, id:"end_user_name" %>
        </li>
        <li>
          <label for="end_user_introduction">自己紹介</label>
          <%= f.text_field :introduction, id:"end_user_introduction" %>
        </li>
      </ul>
      <div class="row mt-3 ">
        <%= f.submit "保存", class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>