<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 pr-5 border-right">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-5 mx-auto">
      <ul class="list-unstyled">
        <li>
          <h5><%= @end_user.name %></h5>
        </li>
        <li>
          <%= @end_user.post_contents.count %>件の投稿
        </li>
      </ul>
      <div class="plofile-image">
        <%= image_tag @end_user.get_profile_image, style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %>
      </div>
      <ul class="list-unstyled">
        <li>
          フォロー<%= link_to @end_user.followings.count, end_user_followings_path(@end_user), class: "text-dark mr-3" %>
          フォロワー<%= link_to @end_user.followers.count, end_user_followers_path(@end_user), class: "text-dark" %>
        </li>
        <li>
          <%= @end_user.introduction %>
        </li>
      </ul>
    </div>
    <div class="col-lg-4 float-right">
      <ul class="list-unstyled">
        <% if @end_user == current_end_user %>
        <li>
          <%= @random_message.idol %>
        </li>
        <li>
          <%= @random_message.message %>
        </li>
        <li>
          <%= link_to messages_path, class: "text-dark" do %>
            <i class="fa-solid fa-envelope fa-2x"></i>
          <% end %>
        </li>
        <% else %>
        <% end %>
        <li>
          <% if current_end_user != @end_user %>
            <%= render 'end_user/follows/btn', end_user: @end_user, options: { class: ""} %>
          <% else %>
            <%= link_to "プロフィールを編集する", edit_end_user_path(@end_user), class: "btn btn btn-primary" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row mt-3 col-sm-4 mx-auto">
    <%= link_to "いいね", likes_end_user_path(@end_user) %>

    <div class="row mt-5">
      <!-- タブとコンテンツの基本構造 -->
      <div class="tabs">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#section1">セクション1</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#section2">セクション2</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#section3">セクション3</a>
          </li>
        </ul>

        <div class="tab-content">
          <div id="section1" class="tab-pane fade show active">
            <p>セクション1のコンテンツが表示されます。</p>
          </div>
          <div id="section2" class="tab-pane fade">
            <p>セクション2のコンテンツが表示されます。</p>
          </div>
          <div id="section3" class="tab-pane fade">
            <p>セクション3のコンテンツが表示されます。</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>