<% if like_post_contents.empty? %>
  <div class="row mt-3">
    <h3>いいねした投稿はありません</h3>
    <p>気に入ったユーザーの投稿をいいねしてみましょう</p>
  </div>
<% else %>
  <% like_post_contents.each do |post_content| %>
  <div class="row mt-5 ml-3">
    <%= link_to end_user_path(post_content.end_user.id) do %>
      <ul class="list-unstyled">
        <li class="text-dark">
          <%= image_tag post_content.end_user.get_profile_image, style: "border-radius: 50%; width: 70px; height: 70px; object-fit:cover;" %>
          <%= post_content.end_user.name %>
        </li>
      </ul>
    <% end %>
  </div>
  <div class="row mt-3 ml-3">
    <%= link_to post_content_path(post_content.id), class: "text-dark" do %>
      <%= post_content.text %>
      <% if post_content.image.attached? %>
        <%= image_tag post_content.get_image(200,200) %>
      <% else %>
      <% end %>
    <% end %>
  </div>
  <div class="row mt-2 ml-3">
    <%= l post_content.created_at %>
  </div>
  <% end %>
<% end %>
