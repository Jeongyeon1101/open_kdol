<% if current_end_user != end_user %>
  <% if current_end_user.following?(end_user) %><!--ログイン中のユーザが表示されているユーザをフォローしているか -->
    <%= link_to "フォロー中", end_user_follows_path(end_user.id), method: :delete, class: options[:class].presence || "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", end_user_follows_path(end_user.id), method: :post, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>