<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 pr-5 border-right">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-6">
      <div class="row mt-3">
        <h2>フォロワー</h2>
      </div>
      <% if @end_users.exists? %>
       <% @end_users.each do |end_user| %>
        <div class="row mt-5">
        <%= link_to end_user_path(end_user.id) do %>
          <ul class="list-unstyled text-dark">
            <li>
              <%= image_tag end_user.get_profile_image, style: "border-radius: 50%; width: 70px; height: 70px; object-fit:cover;" %>
              <%= end_user.name %>
            </li>
            <li>
              <%= end_user.introduction %>
            </li>
          </ul>
        </div>
      <% end %>
      <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>